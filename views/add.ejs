<h2>Tambah Kuliner</h2>

<form action="/add" method="POST" enctype="multipart/form-data">
    <input name="name" placeholder="Nama makanan" required><br>
    <input name="category" placeholder="Kategori" required><br>
    <input name="rating" type="number" min="1" max="5" required><br>
    <textarea name="notes" placeholder="Catatan"></textarea><br>
    <input name="lat" placeholder="Latitude" required><br>
    <input name="lng" placeholder="Longitude" required><br>
    <input type="file" name="photo" required><br><br>

    <button type="submit">Simpan</button>
</form>
